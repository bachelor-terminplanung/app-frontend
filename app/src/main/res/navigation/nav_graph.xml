<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="at.terminplaner.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">

        <action
            android:id="@+id/action_signUpFragment_to_calendarFragment"
            app:destination="@id/calendarFragment" />

        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="at.terminplaner.CalendarFragment"
        android:label="Third"
        tools:layout="@layout/fragment_calendar" >

        <action
            android:id="@+id/action_calendarFragment_to_loginFragment"
            app:destination="@+id/loginFragment" />

        <action
            android:id="@+id/action_calendarFragment_to_calendarDayViewFragment"
            app:destination="@id/calendarDayViewFragment"/>

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="at.terminplaner.LoginFragment"
        android:label="Second"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_calendarFragment"
            app:destination="@id/calendarFragment" />

        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/calendarDayViewFragment"
        android:name="at.terminplaner.CalendarDayViewFragment"
        tools:layout="@layout/fragment_calendar_day_view">

        <action
            android:id="@+id/action_calendarDayViewFragment_to_calendarFragment"
            app:destination="@+id/calendarFragment" />
    </fragment>

</navigation>
